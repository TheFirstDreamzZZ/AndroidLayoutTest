<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:background="#000"
    >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_column="1"
            android:padding="3dp"
            android:text="Open..."
            android:textColor="#fff" />

        <TextView
            android:gravity="right"
            android:padding="3dp"
            android:text="Ctrl-O"
            android:textColor="#fff"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_column="1"
            android:padding="3dp"
            android:text="Save..."
            android:textColor="#fff" />

        <TextView
            android:gravity="right"
            android:padding="3dp"
            android:text="Ctrl-S"
            android:textColor="#fff"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_column="1"
            android:padding="3dp"
            android:text="Save As..."
            android:textColor="#fff"
            />

        <TextView
            android:gravity="right"
            android:padding="3dp"
            android:text="Ctrl-Shift-S"
            android:textColor="#fff"
            />
    </TableRow>
    <View
        android:layout_height="1dp"
        android:background="#B7B7B7" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="X"
            android:textColor="#fff"
            />
        <TextView
            android:layout_column="1"
            android:padding="3dp"
            android:text="Import..."
            android:textColor="#fff" />
    </TableRow>
    <View
        android:layout_height="1dp"
        android:background="#B7B7B7" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="X"
            android:textColor="#fff"
            />
        <TextView
            android:layout_column="1"
            android:padding="3dp"
            android:text="Export..."
            android:textColor="#fff" />
        <TextView
            android:text="Ctrl-E"
            android:textColor="#fff"
            android:layout_gravity="right"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="Quit"
            android:textColor="#fff"
            android:padding="3dp"
            />
    </TableRow>
</TableLayout>
